{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["api/**/*.ts", "src/**/*.ts", "public/login.ts"]
}